@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.GetUserName()<span class="caret"></span></a>
            <ul class="dropdown-menu">
                @using (Html.BeginForm("logoff","User",FormMethod.Post, new{id="logoutForm"}))
                {
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                }
            </ul>
        </li>
    
        
}
else
{
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Login<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li> @Html.ActionLink("Login", "Login", "User", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>

                <li> @Html.ActionLink("Register", "Register", "User", new { id = "registerLink" }, new { @class = "register" })</li>
            </ul>
        </li>
}
